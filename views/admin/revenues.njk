{% extends "layoutAdmin.njk"%}

{% block content %}

<div class="revenues">
  <div class="title">
    <h1>
      Gerenciar Receitas
    </h1>
  </div>

  <section id="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card-image">
          <img src="{{item.image}}" alt="{{item.title}}">
        </div>
        <div class="card-text">
          <h1>{{item.title}}</h1>
          <p>{{item.author}}</p>
          <a href="/admin/recipes/{{ item.id }}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </section>

  <button>
    <a href="/admin/recipes/create">Criar nova receita</a>
  </button>
  </div>

  <script src="scripts.js"></script>

{% endblock %}